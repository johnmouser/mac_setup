# This is a theme for gitprompt.sh,

override_git_prompt_colors() {
  GIT_PROMPT_ONLY_IN_REPO=0
  GIT_PROMPT_THEME_NAME="Chaos"
  GIT_PROMPT_BRANCH="${Cyan}"
  GIT_PROMPT_MASTER_BRANCH="${GIT_PROMPT_BRANCH}"
  GIT_PROMPT_UNTRACKED=" ${Blue}U"
  GIT_PROMPT_CHANGED=" ${Yellow}C"
  GIT_PROMPT_STAGED=" ${Magenta}S"
  GIT_PROMPT_CONFLICTS=" ${Red}M"
  
  GIT_PROMPT_START_USER="${Gray}\u@\h ${Gray}\w${ResetColor}"
  #GIT_PROMPT_START_ROOT="${Red}\h ${Blue}\w${ResetColor}"

  GIT_PROMPT_END_USER="${Gray} \$ ${ResetColor}"
  #GIT_PROMPT_END_ROOT="${Blue} \$ ${ResetColor}"
}

reload_git_prompt_colors "Chaos"

